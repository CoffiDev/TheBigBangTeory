@import url(http://fonts.googleapis.com/css?family=Aclonica);
@font-face {
	font-family: 'icons';
	src:url('../fonts/icomoon.eot?-ur6osz');
	src:url('../fonts/icomoon.eot?#iefix-ur6osz') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-ur6osz') format('woff'),
		url('../fonts/icomoon.ttf?-ur6osz') format('truetype'),
		url('../fonts/icomoon.svg?-ur6osz#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body 
	background url("../img/fondo1.jpg");

header
	background url("../img/fondo2.jpg")
	height 150px
	position relative

	.logo
		display inline-block
		float left
		height 100%

	.logo2
		visibility hidden
	
	.pa
		color white
		position absolute
		left 40px
		text-align: center;
		top 30px
		width 100%

		h1
			color white
			display inline-block
			font-family Aclonica
			font-size 40px			
			margin 0

nav
	background transparent
	position absolute
	top 75%
	left 15%

	ul
		
		margin 0 0 0 0	

		li
			display inline-block			
			margin 0 3em 0 0

			a				
				color white
				font-size 17px
				font-weight bold
				padding 3px
				text-decoration none
				transition all ease 0.5s

				&:hover
					background black
					border-radius 10px
					color yellow
					font-weight bold
					padding 3px
			
			#bpersonajes
				&:after
					content "\e605"
					font-family "icons"
					transition all ease 0.5s

				&:hover:after
					color red
					content "\e605"
					font-family "icons"
					font-size 21px

			#bgaleria
				&:after
					content "\e604"
					font-family "icons"
					transition all ease 0.5s


				&:hover:after
					color red
					content "\e604"
					font-family "icons"
					font-size 21px

			#bcomentarios
				&:after
					content "\e600"
					font-family "icons"
					transition all ease 0.5s

				&:hover:after
					color red
					content "\e600"
					font-family "icons"
					font-size 21px

.content
	position relative

	aside
		background url("../img/fondo_aside.jpg")
		border-radius 20px
		display inline-block
		margin 1.5em 1em
		width 23%
		position fixed
		left -1%
		top 21%
		
		h2
			padding 0 0.5em
			color white
			margin-bottom 0

		ul
			list-style none
			margin 0
			margin-top 0
			padding 1em
			left 15px


			li
				margin-bottom 0.5em

				a
					color yellow
					font-size 18px
					left 5px
					text-decoration none 
				&:hover
					color red
					text-shadow 2px 2px 5px 	
		figure
			margin-top -15px

			a
				img
					border-radius 0px 0px 20px 20px
					height 50px
					width 100%
					margin-bottom -10px
	
	.posicion_personajes
		
		background white
		border-radius 30px
		padding 0.5em
		position absolute
		//margin-left 1em
		width 70%
		left 26%;
		top 5px

		.personajes
			background yellow
			border-radius 30px
			margin-bottom 2em
			padding 0.5em
			
			.desc
				padding 4px
				text-align justify

			.foto
				text-align center
				.personajesimg
					border-radius 50%
					height 200px
					width 200px
					//margin 0 25%


			.nombre
				text-align center
				background red
				color white
				margin 10px -6px

