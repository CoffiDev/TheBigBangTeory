	header
		
		.logo2
			visibility visible
			display inline-block			
			float: right;
			margin-rigth 0px
			height 100%

		h1
			//left 35%

		nav
			top 70%
			left 24%

			ul
				li
					a
						font-size 21px

					#bpersonajes
						&:hover:after
							font-size 32px

					#bgaleria
						&:hover:after
							font-size 32px

					#bcomentarios
						&:hover:after
							font-size 32px

	#perimg
		height 170px

	.posicion_personajes
		.personajes
			.foto
				.personajesimg
					border-radius 0px
